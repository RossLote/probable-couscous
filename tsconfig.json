{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/vue/types"
    ],
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "",
    "node_modules",
    "typings"
  ]
}
